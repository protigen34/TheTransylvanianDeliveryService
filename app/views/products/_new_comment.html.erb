<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div class="form-group">
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class:"form-control" %>
    </p>
  </div>
    <p>
      <div class="rating"></div>
    </p>
    <p><small>
      <%= f.submit "Submit" %></small>
    </p>
  <% end %>
<% end %>